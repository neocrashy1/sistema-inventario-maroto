<script>
import { ref, computed, onMounted } from 'vue'
import { useThirdPartiesStore } from '@/stores/thirdParties'

export default {
  name: 'ThirdParties',
  setup() {
    const thirdPartiesStore = useThirdPartiesStore()
    
    // Estado reativo
    const loading = ref(false)
    const viewMode = ref('grid')
    const searchQuery = ref('')
    const selectedType = ref('')
    const selectedStatus = ref('')
    const selectedCategory = ref('')
    
    // Modais
    const showNewThirdPartyModal = ref(false)
    const showThirdPartyDetailsModal = ref(false)
    const editingThirdParty = ref(null)
    const selectedThirdParty = ref(null)
    
    // Formulário
    const thirdPartyForm = ref({
      name: '',
      type: '',
      document: '',
      email: '',
      phone: '',
      contact: '',
      contactPhone: '',
      address: {
        street: '',
        city: '',
        state: '',
        zipCode: ''
      },
      status: 'active',
      category: '',
      notes: ''
    })

    // Computed
    const filteredThirdParties = computed(() => thirdPartiesStore.filteredThirdParties)

    // Métodos
    const handleSearch = () => {
      thirdPartiesStore.setSearchFilter(searchQuery.value)
    }

    const handleTypeFilter = () => {
      thirdPartiesStore.setTypeFilter(selectedType.value)
    }

    const handleStatusFilter = () => {
      thirdPartiesStore.setStatusFilter(selectedStatus.value)
    }

    const handleCategoryFilter = () => {
      thirdPartiesStore.setCategoryFilter(selectedCategory.value)
    }

    const clearFilters = () => {
      searchQuery.value = ''
      selectedType.value = ''
      selectedStatus.value = ''
      selectedCategory.value = ''
      thirdPartiesStore.clearFilters()
    }

    const resetForm = () => {
      thirdPartyForm.value = {
        name: '',
        type: '',
        document: '',
        email: '',
        phone: '',
        contact: '',
        contactPhone: '',
        address: {
          street: '',
          city: '',
          state: '',
          zipCode: ''
        },
        status: 'active',
        category: '',
        notes: ''
      }
    }

    const closeNewThirdPartyModal = () => {
      showNewThirdPartyModal.value = false
      editingThirdParty.value = null
      resetForm()
    }

    const closeThirdPartyDetailsModal = () => {
      showThirdPartyDetailsModal.value = false
      selectedThirdParty.value = null
    }

    const saveThirdParty = () => {
      if (editingThirdParty.value) {
        thirdPartiesStore.updateThirdParty(editingThirdParty.value.id, thirdPartyForm.value)
      } else {
        thirdPartiesStore.addThirdParty(thirdPartyForm.value)
      }
      closeNewThirdPartyModal()
    }

    const viewThirdParty = (thirdParty) => {
      selectedThirdParty.value = thirdParty
      showThirdPartyDetailsModal.value = true
    }

    const editThirdParty = (thirdParty) => {
      editingThirdParty.value = thirdParty
      thirdPartyForm.value = { ...thirdParty }
      showNewThirdPartyModal.value = true
      showThirdPartyDetailsModal.value = false
    }

    const toggleThirdPartyStatus = (thirdParty) => {
      thirdPartiesStore.toggleThirdPartyStatus(thirdParty.id)
    }

    const exportThirdParties = () => {
      const data = thirdPartiesStore.exportThirdParties()
      // Implementar lógica de exportação (CSV, Excel, etc.)
      console.log('Exportando terceiros:', data)
    }

    const formatDate = (dateString) => {
      return new Date(dateString).toLocaleDateString('pt-BR')
    }

    // Lifecycle
    onMounted(() => {
      // Carregar dados se necessário
    })

    return {
      // Store
      thirdPartiesStore,
      
      // Estado
      loading,
      viewMode,
      searchQuery,
      selectedType,
      selectedStatus,
      selectedCategory,
      
      // Modais
      showNewThirdPartyModal,
      showThirdPartyDetailsModal,
      editingThirdParty,
      selectedThirdParty,
      
      // Formulário
      thirdPartyForm,
      
      // Computed
      filteredThirdParties,
      
      // Métodos
      handleSearch,
      handleTypeFilter,
      handleStatusFilter,
      handleCategoryFilter,
      clearFilters,
      closeNewThirdPartyModal,
      closeThirdPartyDetailsModal,
      saveThirdParty,
      viewThirdParty,
      editThirdParty,
      toggleThirdPartyStatus,
      exportThirdParties,
      formatDate
    }
  }
}
</script>

