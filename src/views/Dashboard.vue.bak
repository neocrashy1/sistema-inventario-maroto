<script>
import { computed, onMounted, onUnmounted, ref, defineAsyncComponent } from 'vue'
import { useRouter } from 'vue-router'
import { useAssetsStore } from '@/stores/assets'
import { useDashboardStore } from '@/stores/dashboard'


// Lazy loading dos componentes para melhor performance
const ProjectQualityMonitor = defineAsyncComponent({
  loader: () => import('@/components/ProjectQualityMonitor.vue'),
  loadingComponent: () => import('@/components/common/LoadingSpinner.vue'),
  errorComponent: () => import('@/components/common/ErrorMessage.vue'),
  delay: 200,
  timeout: 3000
})

const SimpleLineChart = defineAsyncComponent({
  loader: () => import('@/components/charts/SimpleLineChart.vue'),
  loadingComponent: () => import('@/components/common/LoadingSpinner.vue'),
  delay: 100,
  timeout: 3000
})

const SimplePieChart = defineAsyncComponent({
  loader: () => import('@/components/charts/SimplePieChart.vue'),
  loadingComponent: () => import('@/components/common/LoadingSpinner.vue'),
  delay: 100,
  timeout: 3000
})

const SimpleBarChart = defineAsyncComponent({
  loader: () => import('@/components/charts/SimpleBarChart.vue'),
  loadingComponent: () => import('@/components/common/LoadingSpinner.vue'),
  delay: 100,
  timeout: 3000
})

import SkeletonLoader from '@/components/common/SkeletonLoader.vue'

export default {
  name: 'Dashboard',
  components: {
    SimpleLineChart,
    SimplePieChart,
    SimpleBarChart,
    ProjectQualityMonitor,
    SkeletonLoader
  },
  
  setup() {

// Router
const router = useRouter()

// Stores
const assetsStore = useAssetsStore()
const dashboardStore = useDashboardStore()


// Loading state
const loading = ref(false)

// Computed properties for KPIs
const totalAssets = computed(() => {
  return assetsStore.dashboardSummary.totalAssets || assetsStore.totalAssets
})

const totalValue = computed(() => {
  return assetsStore.dashboardSummary.totalValue || assetsStore.totalValue
})

// Normalizar valor para número antes de formatar moeda
const normalizedTotalValue = computed(() => {
  const v = assetsStore.dashboardSummary.totalValue ?? assetsStore.totalValue
  if (typeof v === 'string') {
    const numeric = v
      .replace(/[^\d,.-]/g, '') // remove símbolos e letras
      .replace(/\./g, '')       // remove separador de milhar
      .replace(',', '.')         // converte vírgula decimal para ponto
    const num = parseFloat(numeric)
    return isNaN(num) ? 0 : num
  }
  return v || 0
})

const activeCount = computed(() => {
  return assetsStore.dashboardSummary.activeAssets || assetsStore.activeAssets
})

const maintenanceCount = computed(() => {
  return assetsStore.dashboardSummary.inMaintenance || 
         (assetsStore.assetsByStatus?.['Manutenção'] || 0)
})
const categoriesCount = computed(() => assetsStore.categories?.length || 0)
const statusCount = computed(() => 4) // Ativo, Inativo, Manutenção, Descartado

const recentActivities = computed(() => dashboardStore.recentActivities || [])

// Chart data
const trendsData = computed(() => [
  {
    label: 'Ativos Totais',
    data: [120, 135, 142, 158, 165, 172, 180, 185, 192, 198, 205, 210],
    color: '#3b82f6'
  },
  {
    label: 'Valor (em milhares)',
    data: [850, 920, 980, 1050, 1120, 1180, 1250, 1320, 1380, 1450, 1520, 1580],
    color: '#10b981'
  }
])

const trendsLabels = computed(() => [
  'Jan', 'Fev', 'Mar', 'Abr', 'Mai', 'Jun',
  'Jul', 'Ago', 'Set', 'Out', 'Nov', 'Dez'
])

const statusData = computed(() => {
  const statusCounts = assetsStore.assetsByStatus || {}
  return [
    { label: 'Ativo', value: statusCounts['Ativo'] || 0, color: '#10b981' },
    { label: 'Inativo', value: statusCounts['Inativo'] || 0, color: '#f59e0b' },
    { label: 'Manutenção', value: statusCounts['Manutenção'] || 0, color: '#ef4444' },
    { label: 'Descartado', value: statusCounts['Descartado'] || 0, color: '#6b7280' }
  ].filter(item => item.value > 0)
})

const categoryData = computed(() => {
  const categoryCounts = assetsStore.assetsByCategory || {}
  return [{
    label: 'Quantidade',
    data: Object.values(categoryCounts),
    color: '#3b82f6'
  }]
})

const categoryLabels = computed(() => {
  const categoryCounts = assetsStore.assetsByCategory || {}
  return Object.keys(categoryCounts)
})

// Dados de inventário por departamento
const departmentData = computed(() => {
  const deptCounts = assetsStore.assetsByDepartment || {}
  return [{
    label: 'Quantidade',
    data: Object.values(deptCounts),
    color: '#8b5cf6'
  }]
})

const departmentLabels = computed(() => {
  const deptCounts = assetsStore.assetsByDepartment || {}
  return Object.keys(deptCounts)
})



// Methods
const formatCurrency = (value) => {
  return new Intl.NumberFormat('pt-BR', {
    style: 'currency',
    currency: 'BRL'
  }).format(value)
}

const formatTime = (time) => {
  return new Date(time).toLocaleString('pt-BR')
}

// Navigation methods
const navigateToAssets = () => {
  router.push('/assets')
}

const navigateToFinancial = () => {
  router.push('/reports')
}

const navigateToActiveAssets = () => {
  router.push({ path: '/assets', query: { status: 'Ativo' } })
}

const navigateToMaintenance = () => {
  router.push('/maintenance/work-orders')
}

const refreshData = async () => {
  loading.value = true
  try {
    // Carregar dados do dashboard e resumo de ativos
    await Promise.all([
      assetsStore.fetchAssets(),
      assetsStore.fetchDashboardSummary(),
      dashboardStore.fetchDashboardData()
    ])
  } catch (error) {
    console.error('Erro ao carregar dados do dashboard:', error)
  } finally {
    loading.value = false
  }
}

// Initialize data and auto-refresh
onMounted(async () => {
  await refreshData()
  dashboardStore.startAutoRefresh()
})

onUnmounted(() => {
  dashboardStore.stopAutoRefresh()
})

return {
  loading,
  totalAssets,
  totalValue,
  normalizedTotalValue,
  activeAssets: activeCount,
  maintenanceCount,
  categoriesCount,
  statusCount,
  recentActivities,
  trendsData,
  trendsLabels,
  statusData,
  categoryData,
  categoryLabels,
  departmentData,
  departmentLabels,
  formatCurrency,
  formatTime,
  refreshData,
  navigateToAssets,
  navigateToFinancial,
  navigateToActiveAssets,
  navigateToMaintenance
}
}
}
</script>

