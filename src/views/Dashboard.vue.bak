        >
          <div class="kpi-icon value" aria-hidden="true">
            <i class="fas fa-dollar-sign"></i>
          </div>
          <div class="kpi-content">
            <h3 aria-label="Valor total dos ativos">{{ formatCurrency(normalizedTotalValue) }}</h3>
            <p>Valor Total</p>
          </div>
        </article>

        <article 
          class="kpi-card"
          role="button"
          tabindex="0"
          @click="navigateToActiveAssets"
          @keydown.enter="navigateToActiveAssets"
          @keydown.space.prevent="navigateToActiveAssets"
          aria-label="Ativos ativos: {{ activeAssets }}. Clique para ver ativos em uso"
        >
          <div class="kpi-icon active" aria-hidden="true">
