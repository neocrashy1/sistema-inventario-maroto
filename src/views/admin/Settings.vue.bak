<script setup>
import { ref, computed, onMounted } from 'vue'
import { useSettingsStore } from '@/stores/settings'

// Store
const settingsStore = useSettingsStore()

// Estado reativo
const activeCategory = ref('general')
const hasChanges = ref(false)
const showRestoreModal = ref(false)
const successMessage = ref('')
const errorMessage = ref('')
const backupStatus = ref(null)
const backupFile = ref(null)

// Configurações do sistema (usando o store)
const settings = computed(() => settingsStore.settings)

// Categorias de configurações
const settingsCategories = [
  { id: 'general', name: 'Geral', icon: 'fas fa-cog' },
  { id: 'network', name: 'Rede', icon: 'fas fa-network-wired' },
  { id: 'security', name: 'Segurança', icon: 'fas fa-shield-alt' },
  { id: 'notifications', name: 'Notificações', icon: 'fas fa-bell' },
  { id: 'backup', name: 'Backup', icon: 'fas fa-database' }
]

// Tipos de notificação
const notificationTypes = [
  {
    id: 'deviceDown',
    name: 'Dispositivo Offline',
    description: 'Quando um dispositivo fica offline'
  },
  {
    id: 'newDevice',
    name: 'Novo Dispositivo',
    description: 'Quando um novo dispositivo é descoberto'
  },
  {
    id: 'systemError',
    name: 'Erro do Sistema',
    description: 'Quando ocorre um erro crítico'
  },
  {
    id: 'backup',
    name: 'Backup',
    description: 'Status dos backups automáticos'
  },
  {
    id: 'maintenance',
    name: 'Manutenção',
    description: 'Notificações de manutenção'
  }
]

// Métodos
function markAsChanged() {
  hasChanges.value = true
}

async function saveAllSettings() {
  const result = await settingsStore.saveSettings(settings.value)
  
  if (result.success) {
    hasChanges.value = false
    showSuccessMessage(result.message)
  } else {
    showErrorMessage(result.message)
  }
}

function exportBackup() {
  const result = settingsStore.exportBackup()
  
  if (result.success) {
    showSuccessMessage(result.message)
  } else {
    showErrorMessage(result.message)
  }
}

function addNetwork() {
  settings.value.network.scanNetworks.push('')
  markAsChanged()
}

function removeNetwork(index) {
  settings.value.network.scanNetworks.splice(index, 1)
  markAsChanged()
}

async function testUbiquitiConnection() {
  showSuccessMessage('Testando conexão com Ubiquiti...')
  
  const result = await settingsStore.testUbiquitiConnection()
  
  if (result.success) {
    showSuccessMessage(result.message)
  } else {
    showErrorMessage(result.message)
  }
}

async function testEmailConnection() {
  showSuccessMessage('Testando configurações de email...')
  
  const result = await settingsStore.testEmailConnection()
  
  if (result.success) {
    showSuccessMessage(result.message)
  } else {
    showErrorMessage(result.message)
  }
}

async function createBackup() {
  backupStatus.value = {
    type: 'info',
    icon: 'fas fa-spinner fa-spin',
    message: 'Criando backup...'
  }
  
  const result = await settingsStore.createBackup()
  
  if (result.success) {
    backupStatus.value = {
      type: 'success',
      icon: 'fas fa-check',
      message: result.message
    }
  } else {
    backupStatus.value = {
      type: 'error',
      icon: 'fas fa-times',
      message: result.message
    }
  }
  
  setTimeout(() => {
    backupStatus.value = null
  }, 5000)
}

function downloadBackupList() {
  const backups = settingsStore.backupHistory
  console.log('Lista de backups:', backups)
  showSuccessMessage('Lista de backups exibida no console')
}

async function restoreBackup() {
  if (!backupFile.value?.files[0]) {
    showErrorMessage('Selecione um arquivo de backup')
    return
  }
  
  const file = backupFile.value.files[0]
  const reader = new FileReader()
  
  reader.onload = async (e) => {
    try {
      const backup = JSON.parse(e.target.result)
      const result = await settingsStore.restoreBackup(backup)
      
      if (result.success) {
        markAsChanged()
        showRestoreModal.value = false
        showSuccessMessage(result.message)
      } else {
        showErrorMessage(result.message)
      }
    } catch (error) {
      showErrorMessage('Erro ao ler arquivo de backup')
    }
  }
  
  reader.readAsText(file)
}

function showSuccessMessage(message) {
  successMessage.value = message
  setTimeout(() => {
    successMessage.value = ''
  }, 5000)
}

function showErrorMessage(message) {
  errorMessage.value = message
  setTimeout(() => {
    errorMessage.value = ''
  }, 5000)
}

// Lifecycle
onMounted(async () => {
  await settingsStore.loadSettings()
})
</script>

