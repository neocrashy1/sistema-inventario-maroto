# Production Environment Configuration
# Database
DATABASE_URL=postgresql://username:password@localhost:5432/levitiis_prod
ASYNC_DATABASE_URL=postgresql+asyncpg://username:password@localhost:5432/levitiis_prod

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST_SIZE=10

# Logging
LOG_LEVEL=INFO
LOG_FILE=/var/log/levitiis/app.log

# Application
DEBUG=false
ENVIRONMENT=production
HOST=0.0.0.0
PORT=8000

# SSL/TLS
SSL_CERT_PATH=/etc/ssl/certs/levitiis.crt
SSL_KEY_PATH=/etc/ssl/private/levitiis.key

# Monitoring
SENTRY_DSN=your-sentry-dsn-here
METRICS_ENABLED=true
HEALTH_CHECK_INTERVAL=30

# Email (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@levitiis.com