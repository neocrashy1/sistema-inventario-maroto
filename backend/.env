# Application Configuration
APP_NAME=Levitiis Asset Management
APP_VERSION=1.0.0
DEBUG=true
LOG_LEVEL=INFO
API_V1_STR=/api/v1

# Security Configuration
SECRET_KEY=dev-secret
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Database Configuration (PostgreSQL)
# Async driver for app runtime
ASYNC_DATABASE_URL=sqlite+aiosqlite:///levitiis_dev.db
# Sync driver for migrations and scripts (psycopg3)
DATABASE_URL=sqlite:///levitiis_dev.db
DATABASE_URL_SYNC=sqlite:///levitiis_dev.db

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080,http://localhost:5173,http://localhost:5180

# File Upload Configuration
MAX_UPLOAD_SIZE=10485760
UPLOAD_PATH=./uploads

# Network Discovery Configuration
NETWORK_DISCOVERY_TIMEOUT=30
NETWORK_DISCOVERY_CONCURRENT_SCANS=10

# Email Configuration (SMTP) - Optional for development
SMTP_TLS=true
SMTP_PORT=587
SMTP_HOST=
SMTP_USER=
SMTP_PASSWORD=

# Redis Configuration (for caching and sessions) - Optional for development
REDIS_URL=

# Monitoring and Logging
SENTRY_DSN=
LOG_FILE_PATH=./logs/app.log

# Agent Configuration
AGENT_HEARTBEAT_INTERVAL=300
AGENT_CONFIG_REFRESH_INTERVAL=3600

# Agent API Keys for agent authentication (comma-separated)
API_KEY_HEADER_NAME=X-API-Key
AGENT_API_KEYS=dev-agent-key-1,dev-agent-key-2